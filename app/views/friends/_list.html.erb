<div class="row">
  <div class="col-9">
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @friends.each do | friend | %>
        <tr>
          <td><%= friend.full_name %></td>
          <td><%= friend.email %></td>
          <td>
            <%= link_to 'Unfollow', friendship_path(friend), data: {"turbo-method": :delete , "turbo-confirm": "Are you sure?"}, class: "btn btn-sm btn-warning" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>