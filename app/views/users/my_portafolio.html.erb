<h1>My Portafolio</h1>
<div class="search-area">
  <h3>Search Stocks</h3>
  <%= form_tag search_stock_path, method: :get do %>
    <div class="form-group row">
      <div class="col-sm-9">
        <%= text_field_tag :stock, params[:stock], placeholder: "Stock ticker symbol", autofocus: true, class: "form-control form-control-large" %>
      </div>
      <div class="col-sm-3">
        <%= button_tag type: :submit, class: "btn btn-success" do %>
          <%= 'Search' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<br/>
<div class="mb-2">
  <%= render 'users/result' %>
</div>

<% if !@tracked_stocks.blank? and !@tracked_stocks.empty? %>
  <%= render 'stocks/list' %>
<% end %>



