<h1>Friends list</h1>
<div class="search-area">
  <h3>Search friends</h3>
  <%= form_tag search_friend_path, method: :get do %>
    <div class="form-group row">
      <div class="col-sm-9">
        <%= text_field_tag :friend, params[:friend], placeholder: "Friend name", autofocus: true, class: "form-control form-control-large" %>
      </div>
      <div class="col-sm-3">
        <%= button_tag type: :submit, class: "btn btn-success" do %>
          <%= 'Search' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<div class="mb-2">
  <%= render 'users/friend_result' %>
</div>

<%if !@friends.empty? %>
  <%= render 'friends/list' %>
<%end%>